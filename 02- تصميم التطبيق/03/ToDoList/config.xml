<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hsoub.todolist" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ToDoList</name>
    <description>
        A sample Apache Cordova application that schedule user tasks.
    </description>
    <author email="dev@hsoub.com" href="http://www.hsoub.com">
        Hsoub Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="SplashScreenDelay" value="5000"/>
    <preference name="FadeSplashScreenDuration" value="2000"/>
    <preference name="ShowSplashScreenSpinner" value="true"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
